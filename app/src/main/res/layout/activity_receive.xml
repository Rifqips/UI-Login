<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/login_bg"
    tools:context=".ReceiveActivity">

    <ImageView
        android:id="@+id/iv_pesawat1"
        android:layout_width="match_parent"
        android:src="@drawable/pesawat"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:contentDescription="logo1" />

    <EditText
        android:id="@+id/et_origin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Origin"
        android:textColorHint="@color/purple_200"
        android:textColor="@color/white"
        android:padding="15dp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:drawableStart="@drawable/ic_baseline_airplanemode_active_24"
        android:drawableTint="@color/purple_200"
        android:drawablePadding="16dp" />

    <EditText
        android:id="@+id/et_destination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Destination"
        android:textColorHint="@color/purple_200"
        android:textColor="@color/white"
        android:padding="15dp"
        android:textStyle="bold"
        android:drawableStart="@drawable/ic_baseline_location_city_24"
        android:drawableTint="@color/purple_200"
        android:drawablePadding="16dp" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/purple_200"
        android:text="Select Date"
        android:textSize="20sp"
        />

    <EditText
        android:id="@+id/et_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Departure Date"
        android:textColorHint="@color/purple_200"
        android:textColor="@color/white"
        android:layout_marginRight="230dp"
        android:padding="15dp"
        android:textStyle="bold"
        android:drawableStart="@drawable/ic_baseline_calendar_today_24"
        android:drawableTint="@color/purple_200"
        android:drawablePadding="16dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/material_login_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Search Flight"
        android:textColor="@color/white"
        app:cornerRadius="30dp"
        android:backgroundTint="@color/purple_200"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="100dp"/>


</LinearLayout>